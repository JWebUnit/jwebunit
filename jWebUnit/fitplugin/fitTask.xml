<project name="fittask" default="runfit">
    <target name="runfit">
        <java classname="net.sourceforge.jwebunit.fit.DirectoryRunner" fork="true">
            <classpath>
                <pathelement location="../classes"/>
                <fileset dir="../lib">
                    <include name="*.jar"/>
                </fileset>

            </classpath>
            <arg line="testdata/input testdata/output"/>
        </java>
    </target>
</project>